{
	"manifest_version": 3,
	"name": "Auto Fullscreen for Videos",
	"version": "1.0",
	"description": "Automatically enters fullscreen mode for videos on webpages.",
	"permissions": [
		"activeTab"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_idle"
		}
	]
}
